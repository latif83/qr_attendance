// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model students {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  fname     String
  lname     String
  studid   String   @unique
  address   String
  level String
  contact   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

}

// admins model
model admins {
  id             String           @id @default(cuid())
  email          String           @unique
  password       String
  name           String
  createdAt      DateTime         @default(now())
  updatedAt      DateTime         @updatedAt
}

model instructors {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  fname     String
  lname     String
  staffid   String   @unique
  address   String
  contact   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Define a one-to-many relationship with courses
  courses   courses[] // Each instructor can teach multiple courses
}

model courses {
  id            String    @id @default(cuid())
  title         String    @unique
  code          String
  instructorId  String    // Foreign key referencing instructor's id
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  instructor    instructors @relation(fields: [instructorId], references: [id])
}
